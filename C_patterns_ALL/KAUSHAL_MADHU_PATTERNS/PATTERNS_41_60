*     * * *     * 
*               * 
*               * 
* * * * * * * * * 

#include <stdio.h>

int main()
{
    int i,j;
    
    for(i=1;i<=9;i++)
    {
        for(j=1;j<=9;j++)
        {
            
            
            if((i==1 || i==9 || j==1 || j==9) || (i>=4 && i<=6 && j>=4 && j<=6))
            {
                if(i==5 && j==5)
            {
                printf("  ");
            }
            else
            { 
                printf("* ");
                
            }
            }
            else
            {
                printf("  ");
            }
            
            
        }
        printf("\n");
    }
}

