* * * * 
* * * * * * * * 

#include <stdio.h>
#include <math.h>
int main()
{
    int i,j;
    
    for(i=0;i<=3;i++)
    {
        for(j=1;j<=8;j++)
        {
            if(j<=(pow(2,i)))
            {
                printf("* ");
            }
        }
            
        
        printf("\n");
    }
}

