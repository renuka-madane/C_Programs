PATTERN 24
**********
****  ****
***    ***
**      **
*        *
#include <stdio.h>

int main()
{
    int i,j;
    
    for(i=1;i<=5;i++)
    {
        for(j=i;j<=5;j++)
        {
            printf("*");
        }
        
        for(j=2;j<=i;j++)
        {
            printf(" ");
        }
        
        for(j=2;j<=i;j++)
        {
            printf(" ");
        }
        for(j=i;j<=5;j++)
        {
            printf("*");
        }
        
        
        printf("\n");
        
    }
}
