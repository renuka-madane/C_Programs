**********************CODES
#include <stdbool.h>
#include <stdio.h>

int main() 
{
	int age = 39;
    char name[] = "Sandeep";
    float weight = 68.5;
    bool isMarried = true;
    char gender = 'M';
    printf("%d \n", age);
	printf("%s \n", name);
    printf("%f \n", weight);
    printf("%d \n", isMarried);
    printf("%c \n", gender);
    return 0;
}
