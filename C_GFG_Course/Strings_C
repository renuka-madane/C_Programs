


==============CODES / PROBLEMS
..............PATTERN SEARCHING IN STRING
# include<stdio.h>
# include<string.h>
# include<stdbool.h>
 
bool search(char* s, char* p)
{
    int M = strlen(s);
    int N = strlen(p);
    int j;
    for(int i = 0; i<M; i++)
    {
        int a=i;
        for(j=0;j<N;j++)
        {
            if(p[j]==s[a])
            {                
                a++;
            }
            else
            {                
                break;
            }            
        }
        if(j==N)
        {
            return 1;
        }
    }
    return 0;
}
int main()
{
    char s[] = "eeksgeeksfor";
    char p[] = "geeks";
    if(search(s,p)==1)
    {
        printf("PATTERN EXISTS.");
    }
    else
    {
        printf("PATTERN DOES NOT EXISTS.");
    }    
}
