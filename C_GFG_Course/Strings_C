........................CODE FOR REVERSE A STRING
 int len=strlen(str);
    
    char new_string[15];
    int k=0;
    
    for(int i=(len-1);i>=0;i--)
    {
        
        new_string[k]=str[i];
        k++;
    }
    new_string[len]='\0';
    
    printf("%s",new_string);
