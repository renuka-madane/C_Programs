 char s[100];
    scanf("%s", s);
    char newString[100];
    int l = strlen(s) - 1;
    int i = 0;
    while(s[i] != '\0')
    {
        newString[i] = s[l];
        l--;
        i++;
    }
    printf("%s", newString);
    return 0;
