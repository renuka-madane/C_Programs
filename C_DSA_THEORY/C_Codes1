==========sizeof pointer and its values are diff.
#include <stdio.h>
#define R 10
#define C 20

int main()
{
    int (*p)[R][C];
    printf("%ld",sizeof(p)); if we do sizeof(*p) then ans is 800
   
    return 0;
} ---->  8 
==================
#include <stdio.h>
void fun(int **ptr)  double ptr
{
    int w=115;
    *ptr=&w;
}
int main()
{
    int r=20;
    int *p=&r;
    fun(&p);
     printf("%d", *p);     
}  ANSWER --  115  PASS BY REFRENCE IN POINTER
====================
#include <stdio.h>

void fun(int *ptr)  ptr
{
    int w=115;
    ptr=&w;
}
int main()
{
    int r=20;
    int *p=&r;
    fun(p);
     printf("%d", *p);     
}  ANS 20 -- PASS BY VALUE USING POINTER
=================type 3
void fun(int *ptr) 
{
    *ptr=551;
}
int main()
{
    int r=20;
   
    fun(&r);
     printf("%d",r); 
    
} ANS = 551 -->> USING NORMAL POINTERS
