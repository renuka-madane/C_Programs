===========IS SORTED ARRAY OR NOT - RECURSIVE
#include <stdio.h>
#include <stdbool.h>

bool isSorted(int *arr,int size)
{
    if(size==1 || size==0)
    {
        return true;
    }
    if(arr[size-1]<arr[size-2])
    {
        return false;
    }
    
    isSorted(arr,size-1);
}
int main()
{
    int arr[] = {10, 10, 13, 40, 0};
    int n=sizeof(arr)/sizeof(arr[0]);
    if(isSorted(arr,n))
    {
        printf("IS SORTED");
    }
    else
    {
        printf("UN SORTED");
    }
    
}
